<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">

    <!-- Welcome Message -->
    <TextView
        android:id="@+id/welcome_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/welcome_message"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Subtitle Message -->
    <TextView
        android:id="@+id/choose_menu_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/choose_menu_prompt"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcome_message" />

    <!-- This LinearLayout will hold our menu buttons vertically -->
    <LinearLayout
        android:id="@+id/menu_button_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/choose_menu_prompt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Hotchpotch Button -->
        <Button
            android:id="@+id/button_hotchpotch"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/button_background_light"
            android:text="@string/menu_hotchpotch"
            android:textColor="@color/button_text_color"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"
            app:backgroundTint="@null"/> <!-- Important: Use app:backgroundTint="@null" to apply our custom background -->

        <!-- Noodles Button -->
        <Button
            android:id="@+id/button_noodles"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/button_background_light"
            android:text="@string/menu_noodles"
            android:textColor="@color/button_text_color"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"
            app:backgroundTint="@null"/>

        <!-- Vegetables Button -->
        <Button
            android:id="@+id/button_vegetables"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/button_background_light"
            android:text="@string/menu_vegetables"
            android:textColor="@color/button_text_color"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"
            app:backgroundTint="@null"/>

        <!-- Fried Rice Button -->
        <Button
            android:id="@+id/button_fried_rice"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/button_background_light"
            android:text="@string/menu_fried_rice"
            android:textColor="@color/button_text_color"
            android:textSize="18sp"
            app:backgroundTint="@null"/>

    </LinearLayout>

    <!-- Exit Button -->
    <Button
        android:id="@+id/button_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exit_button"
        android:backgroundTint="@color/exit_button_color"
        android:textColor="@color/white"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="48dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
